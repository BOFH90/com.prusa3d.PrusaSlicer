    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "prusa-slicer",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--device=dri",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--filesystem=/run/media",
        "--filesystem=/media",
        "--filesystem=/mnt",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
