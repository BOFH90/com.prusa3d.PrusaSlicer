{
    "name": "wxWidgets",
    "cleanup": [
        "/bin",
        "/share/bakefile"
    ],
    "config-opts": [
        "--with-gtk=3",
        "--with-zlib",
        "--with-opengl",
        "--with-regex=builtin",
        "--with-libxpm=builtin",
        "--with-libjpeg=builtin",
        "--with-libtiff=builtin",
        "--disable-sdltest",
        "--disable-precomp-headers",
        "--enable-unicode",
        "--enable-display",
        "--enable-propgrid",
        "--disable-debug",
        "--disable-debug_flag",
        "--with-expat=builtin"
    ],
    "build-options": {
        "cxxflags": "-std=c++0x"
    },
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/prusa3d/wxWidgets/archive/refs/heads/v3.1.3-patched.zip",
            "sha256": "c81c85913f5dc5a9c5361d2378637480eb409cdc6292330e15bbab145eaef949"
        }
    ]
}
