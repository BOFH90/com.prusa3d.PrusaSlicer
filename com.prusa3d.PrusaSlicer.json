{
    "app-id": "com.prusa3d.PrusaSlicer",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "separate-locales": false,
    "command": "prusa-slicer",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--device=dri",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--filesystem=/run/media",
        "--filesystem=/media",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--own-name=com.prusa3d.prusaslicer.*",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=com.prusa3d.prusaslicer.InstanceCheck.*",
        /* FIXME: PrusaSlicer wont start if the locale is not supported */
        /* "--env=LANG=C", */
        "--env=LC_CTYPE=C", 
        "--env=LC_NUMERIC=C", 
        "--env=LC_TIME=C", 
        "--env=LC_COLLATE=C", 
        "--env=LC_MONETARY=C", 
        "--env=LC_MESSAGES=C", 
        "--env=LC_PAPER=C", 
        "--env=LC_NAME=C", 
        "--env=LC_ADDRESS=C", 
        "--env=LC_TELEPHONE=C", 
        "--env=LC_MEASUREMENT=C", 
        "--env=LC_IDENTIFICATION=C"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/glew/glew.json",
        "dependencies/jemalloc.json",
        "dependencies/openexr.json",
        "dependencies/tbb.json",
        "dependencies/boost.json",
        "dependencies/blosc.json",
        "dependencies/openvdb.json",
        "dependencies/nlopt.json",
        "dependencies/cereal.json",
        "dependencies/eigen.json",
        "dependencies/mpfr.json",
        "dependencies/cgal.json",
        "dependencies/wxWidgets.json",
        {
            "name": "PrusaSlicer",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DSLIC3R_FHS=ON",
                "-DSLIC3R_PCH=OFF",
                "-DSLIC3R_PERL_XS=OFF",
                "-DSLIC3R_WX_STABLE=OFF",
                "-DSLIC3R_GTK=3",
                "-DSLIC3R_STATIC=OFF",
                "-DSLIC3R_BUILD_SANDBOXES=OFF",
                "-DSLIC3R_BUILD_TESTS=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "post-install": [
                "install -Dm644 com.prusa3d.PrusaSlicer.metainfo.xml /app/share/metainfo/com.prusa3d.PrusaSlicer.metainfo.xml",
        	    "install -Dm644 com.prusa3d.PrusaSlicer.png /app/share/icons/hicolor/128x128/apps/com.prusa3d.PrusaSlicer.png",
        	    "install -Dm644 com.prusa3d.PrusaSlicer.desktop /app/share/applications/com.prusa3d.PrusaSlicer.desktop",
                "install -Dm644 com.prusa3d.PrusaSlicer.GCodeViewer.png /app/share/icons/hicolor/128x128/apps/com.prusa3d.PrusaSlicer.GCodeViewer.png",
        	    "install -Dm644 com.prusa3d.PrusaSlicer.GCodeViewer.desktop /app/share/applications/com.prusa3d.PrusaSlicer.GCodeViewer.desktop"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/prusa3d/PrusaSlicer/8f0916e37135a47a6d23fe3ed9815b96f175df05/resources/icons/PrusaSlicer.png",
                    "dest-filename": "com.prusa3d.PrusaSlicer.png",
                    "sha256": "484cf12a856f035d8c3ee12fd404d03c3012f815fb9e8fa334c5f7e4127b905a"
                },
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/prusa3d/PrusaSlicer/8f0916e37135a47a6d23fe3ed9815b96f175df05/resources/icons/PrusaSlicer-gcodeviewer_128px.png",
                    "dest-filename": "com.prusa3d.PrusaSlicer.GCodeViewer.png",
                    "sha256": "abb3b5eba59a76c3ab67643090a8eae10a888d716f0150b7d01d12014a529550"
                },
                {
                    "type": "file",
                    "path": "com.prusa3d.PrusaSlicer.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "com.prusa3d.PrusaSlicer.desktop"
                },
                {
                    "type": "file",
                    "path": "com.prusa3d.PrusaSlicer.GCodeViewer.desktop"
                },
                {
                    "type": "archive",
                    "url": "https://github.com/prusa3d/PrusaSlicer/archive/version_2.3.3.tar.gz",
                    "sha256": "deda209505f740ac3d6f59cb2a960f4df908269ee09bd30cd4edb9fc472d29ac"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's/+UNKNOWN/+flathub.org/g' version.inc"
                    ]
                }
            ]
        }
    ]
}
